[Nextcloud]
# Nextcloud server URL (e.g. https://nextcloud.example.com)
Url=

# WebDAV path (e.g. /remote.php/dav/files/USERNAME/Images)
# Format: /remote.php/dav/files/USERNAME/Folder
Path=

# Nextcloud username
Username=

# Password or App Password (recommended: use App Password)
# To generate App Password: Settings → Security → App Password
Password=

# Use locally synchronized path instead of WebDAV
# true = use LocalPath, false = use WebDAV
UseLocalPath=false

# Local path of synchronized folder (if UseLocalPath=true)
# E.g. /home/user/Nextcloud/Images
LocalPath=

# Maximum number of images to load (0 = unlimited)
# E.g. 100 = load maximum 100 images
# Note: the limit is applied during scanning
MaxImages=0
